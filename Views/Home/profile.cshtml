@{
    Layout = null;
}
@using projectdeliverable.Models;
@model List<user>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>inbox</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }

        .emailbox {
            background-color: #808080;
            width: 96%;
            Margin: 1% 1% 0% 1%;
            padding: 1%;
        }

        .content {
            background-color: aqua;
            margin: 0% 1% 1% 1%;
            padding: 10px;
        }

        input[type=text], select {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type=submit] {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .xd {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            width: 50%;
            margin: 10% 22%;
        }

        .button1 {
            display: inline-block;
            font-size: 16px;
            margin: 2% 44%;
            cursor: pointer;
            background-color: white;
            color: #5a5a5a;
            border: 2px solid #4CAF50;
            transition-duration: 0.4s;
            padding: 1% 2%;
        }

            .button1:hover {
                background-color: #4CAF50;
                color: white;
            }

        textarea {
            width: 99%;
            height: 200px;
            max-width: 99%;
        }
    </style>


</head>
<body>

    <div class="topnav">
        <a href="~/Home/inbox">Inbox</a>
        <a href="~/Home/sent">Sent</a>
        <a href="~/Home/newmail">New Mail</a>
        <a href="~/Home/drafts">Drafts</a>
        <a href="~/Home/spam">Spam</a>
        <a href="~/Home/trash">Trash</a>
        <a href="~/Home/block">Blocked Mail</a>
        <a href="~/Home/manage">Manage inbox</a>
        <a class="active" href="~/Home/profile">@Session["email"].ToString()</a>
        <a style="float:right" href="~/Home/logout">Logout</a>
    </div>

    <div class="xd">

        <label><b>Email: </b>@Session["email"].ToString()</label>
        <br />
        <br />

        <label><b>Name: </b>@Model[0].fname<span> </span>@Model[0].lname</label>
        <br />
        <br />

        @if (Model[0].gender[0] == 'M')
        {
            <label><b>Gender: </b>Male</label>
            <br />
            <br />
        }
        else if (@Model[0].gender[0] == 'F')
        {
            <label><b>Gender: </b>Female</label>
            <br />
            <br />
        }
        else if (@Model[0].gender[0] == 'O')
        {
            <label><b>Gender: </b>Other</label>
            <br />
            <br />
        }
        <label><b>Date of Birth: </b>@Model[0].dob</label>
        <br />
        <br />

        <label><b>Date of Join: </b>@Model[0].doj</label>
        <br />
        <br />

        <label><b>Phone: </b>@Model[0].phone</label>
        <br />
        <br />

        <a href="../Home/editprofile"><button class="button1"  name="send">EDIT</button></a>
    </div>

</body>
</html>