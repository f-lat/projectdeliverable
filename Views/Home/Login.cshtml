@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>FAST MAIL | Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
</head>

<script>

    	var email=document.getElementById("email").value;
	var password=document.getElementById("pass").value;
	
	if (email.length==0 || password.length==0)
	{
		alert("Please Enter All Fields");
	}
	
</script>

<style>
    #form1 {
        width: 25%;
        position: static;
        margin: 10% 35%;
        border: 2px solid #cccccc;
        border-radius: 10px;
        font-family: segoe ui;
        background-color: white;
    }

    #inputs {
        margin: 10px 20%;
        width: 61%;
        margin-top: 30px;
    }

    #inputbutton {
        margin: 10px 10% 10px 28%;
        width: 45%;
        margin-top: 30px;
    }

    .button1 {
        padding: 8px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 10px 40px;
        cursor: pointer;
        background-color: white;
        color: #5a5a5a;
        border: 2px solid #4CAF50;
        transition-duration: 0.4s;
        margin-top: 50px;
    }

        .button1:hover {
            background-color: #4CAF50;
            color: white;
        }


    .fields {
        border-left: none;
        border-top: none;
        border-right: none;
        border-bottom: 1px solid darkgrey;
        padding: 5px 4px;
        margin-top: 10px;
    }

    #body {
        background-color: #f5f5f5;
    }

    #link {
        margin: 0px 0px 19px 28%;
        text-decoration: none;
    }
</style>



<body id="body">
    <form method="post" action="../Home/loginformfunction">

        <div id="form1">
            <h1 style="margin: 20px 0px 60px 119px;">
                FAST MAIL
            </h1>


            <span style="color:red">@Model</span> <br /><br />
            <div id="inputs">

                Email: <br>
                <input class="fields" type="text" name="email" id="email" size="30">
            </div>

            <br>
            <br>

            <div id="inputs">
                Password:<br>
                <input class="fields" type="password" name="password" id="pass" size="30">
                <br>
            </div>

            <div id="inputbutton">
                <button class="button1" action="submit" name="Login" onclick="check()">Login</button>
            </div>



            <a id="link" href="Signup.cshtml">Don't have an Account?</a>
        </div>
    </form>
    
</body>
</html>